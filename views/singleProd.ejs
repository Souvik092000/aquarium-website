<%- include('partials/header') %>
<div class="container my-5">
    <h1 class="text-center mb-4"><%= product.name %></h1>
    <div class="row">
        <div class="col-md-6">
            <% product.images.forEach(image => { %>
                <img src="<%= image %>" class="img-fluid mb-2" alt="Product Image">
            <% }) %>
        </div>
        <div class="col-md-6">
            <h2>Description</h2>
            <p><%= product.description %></p>
            <h3>Price: $<%= product.price %></h3>
            <a href="/products/edit/<%= product._id %>" class="btn btn-warning">Edit</a>
            <form action="/products/delete/<%= product._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
